<div class="modal fade" id="replyModal" tabindex="-1" aria-labelledby="replyModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="replyModalLabel">Reply</h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <div id="originalPostContainer"></div>
          <div class="mb-3 postContainer">
            <div class="userImageContainer">
              <img src="/images/profile.jpeg" alt="User Profile" />
            </div>
  
            <div class="mt-3 textareaContainer">
              <textarea  
                style="outline: none; border: 2px solid #edecec;border-radius: 15px; padding: 3px;"
